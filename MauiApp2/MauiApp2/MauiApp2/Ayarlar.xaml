<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Ayarlar"
             Title="Ayarlar">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20">
            <Label Text="Koyu Tema" VerticalOptions="Center" HorizontalOptions="Start" />
            <Switch IsToggled="{Binding IsDarkMode, Mode=TwoWay}" VerticalOptions="Center" HorizontalOptions="End" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
